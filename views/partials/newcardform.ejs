<form class="newCardForm" action="/cards" method="post" enctype="multipart/form-data" novalidate>
  <div class="newCardHead">
    <a href="/user/<%= user._id %>"><i class='bx bx-arrow-back back'></i></a>
    <input class="cardName form-control" type="text" name="cardName" placeholder="Card name" required />
  </div>
  <div id="customstyles" class="customCardStyles card">
    <label id="uploadImage" for="imageUpload">
      <img class="imgStyles" id="output" src="/images/thumbnail.jpg" />
    </label>
    <input onchange="loadFile(event)" name="image" id="imageUpload" type="file" src="/images/thumbnail.jpg" />
    <svg style="width: 100%;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path id="path" fill="#8F60DE" fill-opacity="1" d="M0,192L60,181.3C120,171,240,149,360,170.7C480,192,600,256,720,256C840,256,960,192,1080,165.3C1200,139,1320,149,1380,154.7L1440,160L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z">
      </path>
    </svg>
    <div class="colorContainer">
      <% if(user.subscription !=='Free' ){ %>
      <input onchange="addValuePro(event)" class="colorsInput" type="color" />
      <% } %>
      <div onclick="addValue('#8F60DE')" id="color1" style="background-color: #8F60DE;" class="colors" role="button"></div>
      <div onclick="addValue('#628AF8')" id="color2" style="background-color: #628AF8;" class="colors" role="button"></div>
      <div onclick="addValue('#6C31CD')" id="color3" style="background-color: #6C31CD;" class="colors" role="button"></div>
      <div onclick="addValue('#6DD3C7')" id="color4" style="background-color: #6DD3C7;" class="colors" role="button"></div>
      <div onclick="addValue('#3BB55D')" id="color5" style="background-color: #3BB55D;" class="colors" role="button"></div>
      <div onclick="addValue('#FFC631')" id="color6" style="background-color: #FFC631;" class="colors" role="button"></div>
      <div onclick="addValue('#FF8C39')" id="color7" style="background-color: #FF8C39;" class="colors" role="button"></div>
      <div onclick="addValue('#EA3A2E')" id="color8" style="background-color: #EA3A2E;" class="colors" role="button"></div>
      <div onclick="addValue('#EE85DD')" id="color9" style="background-color: #EE85DD;" class="colors" role="button"></div>
      <div onclick="addValue('#4A4A4A')" id="color10" style="background-color: #4A4A4A;" class="colors" role="button"></div>
      <input id="silentSubmit" class="silentInput" type="text" value="#8F60DE" name="color" />
    </div>
    <div class="card-body">
      <h5 id="fullname" class="card-title">Full name<i id="rotate" class='bx bxs-chevron-right'></i></h5>
      <div id="fullnameDropdown" class="fullnameDropdown">
        <!-- <input type="text" placeholder="Prefix" name="prefix" id="fullnameInputs" /> -->
        <input class="form-control" type="text" placeholder="First name" name="firstName" id="fullnameInputs" required />
        <!-- <input type="text" placeholder="Middle name" name="middleName" id="fullnameInputs" /> -->
        <input type="text" placeholder="Last name" name="lastName" id="fullnameInputs" />
        <!-- <input type="text" placeholder="Suffix" name="suffix" id="fullnameInputs" /> -->
        <input type="text" placeholder="Accreditations" name="accreditations" id="fullnameInputs" />
        <input type="text" placeholder="Preffered name" name="prefferedName" id="fullnameInputs" />
        <!-- <input type="text" placeholder="Maiden name" name="maidenName" id="fullnameInputs" /> -->
        <!-- <input type="text" placeholder="Pronouns" name="pronouns" id="fullnameInputs" /> -->
      </div>
    </div>
    <ul id="expandInputs" class="list-group list-group-flush">
      <li class="list-group-item">
        <textarea name="title" class="textBox" placeholder="Title"></textarea>
      </li>
      <li class="list-group-item">
        <input type="text" placeholder="Department" id="bottomInputs" name="department" />
      </li>
      <li class="list-group-item">
        <input type="text" placeholder="Company" id="bottomInputs" name="company" />
      </li>
      <li class="list-group-item">
        <textarea name="headline" class="textBox" placeholder="Headline"></textarea>
      </li>
    </ul>
    <div class="card-body stickyBtn">
      <button style="background-color: #8F60DE;" id="submit" class="submitBtn" type="submit">Save</button>
    </div>
  </div>
</form>
