<style>
  .sideBoxContainer {
    width: 62px;
    height: 100%;
    background-color: #F0EBE3;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    z-index: 1001;
    top: 0;
    left: 0;
    position: fixed;
    box-shadow: 0px 0px 9px 0px rgba(0, 0, 0, 0.2) inset;
    -webkit-box-shadow: 0px 0px 9px 0px rgba(0, 0, 0, 0.2) inset;
    -moz-box-shadow: 0px 0px 9px 0px rgba(0, 0, 0, 0.2) inset;
    transition: 0.5s all ease-in-out;
  }

  .sideBoxContainer:hover {
    width: 220px;
    transition: 0.5s all ease-in-out;
  }

  .logoContainer {
    width: 220px;
  }

  .imageStyles {
    width: 195px;
  }

  .sideNavbar {
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    left: 0;
  }

  .tabs {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 9px 17px;
    cursor: pointer;
  }

  .tabs:hover {
    background-color: rgb(234, 230, 220);
  }

  .tabs i {
    font-size: 30px;
  }

  .tabs li {
    margin-left: 15px;
  }

  .sideNavItems {
    text-decoration: none;
    list-style: none;
  }

  .topNavbar {
    padding-left: 62px;
    right: 0;
    position: static;
    top: 0;
  }

  .sideNavbar a {
    text-decoration: none;
    color: black;
  }

</style>
<div class="sideBoxContainer">
  <div class="logoContainer">
    <img class="imageStyles" src="/images/logo.png" />
  </div>
  <div class="sideNavbar">
    <a href="/user/<%=user._id%>" class="tabs">
      <i class='bx bx-id-card'></i>
      <li class="sideNavItems">Cards</li>
    </a>
    <a href="/contacts/<%= user._id %>" class="tabs">
      <i class='bx bxs-contact'></i>
      <li class="sideNavItems">Contacts</li>
    </a>
    <!-- <a class="tabs">
      <i class='bx bx-image-alt'></i>
      <li class="sideNavItems">Backgrounds</li>
    </a> -->
    <a href="/settings" class="tabs">
      <i class='bx bxs-cog'></i>
      <li class="sideNavItems">Setting</li>
    </a>
  </div>
</div>
