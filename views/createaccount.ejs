<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/stylesheets/loginStyles.css" rel="stylesheet" type="text/css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>Create an Account</title>
</head>

<body>
  <div class='loginScreen'>
    <div class='boxContainer'>
      <image class='loginLogo' src='/images/logo.png' />
      <h2 class='loginHeading'>Create Account</h2>
      <%- include('./partials/flash') %>
      <form action="/create/account/<%= admin._id %>" method='POST' class='inputContainer' novalidate>
        <label for="validationCustom01" class='labelStyle form-label' for='username'>Enter Email</label>
        <input id="validationCustom01" name='username' class='inputStyle form-control mb-2' type='email' id='username' required />
        <div class="invalid-feedback mt-0 mb-3">
          Please enter the Email
        </div>
        <label class='labelStyle form-label' for='password'>Enter password</label>
        <input minlength="8" name='password' class='inputStyle form-control mb-2' type='password' id='password' required />
        <div class="invalid-feedback mt-0 mb-3">
          Please enter the password
        </div>
        <select name="subscription" class="form-select mb-3" aria-label="Default select example">
          <option selected value="Business">Business</option>
          <option value="Enterprise">Enterprise</option>
        </select>
        <div class='showPasscontainer'>
          <input id="showPasswordInput" class='showpassword form-check-input' type='checkbox' />
          <label class='showpassText form-check-label'>show password</label>
        </div>
        <button class='submitButton' type='submit'>Submit</button>
      </form>
      <p class='signupPara'>Go to Dashboard<a href='/admin/<%= admin._id %>'>Go Back</a></p>
    </div>
  </div>
</body>
<script>
  (() => {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.inputContainer')

    // Loop over them and prevent submission
    Array.from(forms)
      .forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()

</script>
<script src="/javascripts/login.js"></script>

</html>
