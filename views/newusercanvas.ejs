<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="/stylesheets/newusercanvas.css" rel="stylesheet" type="text/css" />
  <title>New User</title>
</head>

<body>
  <!-- Button trigger modal -->
  <div class="customContainer">
    <h2 class="text-center welcomeText">Welcome on Board, <br><%= user.username %>
    </h2>
    </h2>
    <p class="subtitle">The Best Digital Business Card</p>
    <p class="subtitle">Digibiz is a free digital business card and contact manager app designed to help you grow your
      network.</p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Getting
      Started</button>
  </div>


  <!-- Modal -->
  <form novalidate action="/user" method="post" class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Enter the details first</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div>
            <label for="fullname" class="form-label">Enter Full Name*</label>
            <input required id="fullname" class="form-control" type="text" placeholder="Full Name" name="fullname">
            <div class="invalid-feedback mb-3">Full Name is required.</div>
            <div class="valid-feedback mb-3">Looks Good!</div>
            <label for="department" class="form-label">Job Title</label>
            <input id="department" type="text" class="form-control mb-3" placeholder="Department" name="department">
            <label for="company" class="form-label">Company</label>
            <input id="company" type="text" class="form-control mb-3" placeholder="Company" name="company">
            <label for="contact" class="form-label">Contact</label>
            <input id="contact" class="form-control" placeholder="Contact" type="tel" name="contact">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Get Started</button>
        </div>
      </div>
    </div>
  </form>
  <script>
    (() => {
      'use strict'

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      const forms = document.querySelectorAll('.modal')

      // Loop over them and prevent submission
      Array.from(forms)
        .forEach(form => {
          form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }

            form.classList.add('was-validated')
          }, false)
        })
    })()

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

</html>
