<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/stylesheets/users.css" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>Users || Dashboard</title>
</head>

<body>
  <%- include('partials/flash') %>
  <div class="container">
    <a style="color: black; text-decoration: none;" href="/admin/<%= admin._id %>">
      <i class='bx bx-arrow-back'></i>
    </a>
    <h1>Users</h1>
    <% for(let user of users) {%>
    <div class="tabsContainer">
      <div class="head">
        <div class="userId"><strong>Id:</strong> <%= user._id %></div>
        <form action="/admin/delete/<%= user._id %>?_method=DELETE" method="post">
          <button style="background-color: transparent; border: none;" type="submit">
            <i class='bx bx-trash link'></i>
          </button>
        </form>
      </div>
      <div class="body">
        <div class="email"><strong>Email:</strong> <%= user.username %></div>
        <div class="cardsQty"><strong>Cards:</strong> <%= user.cards.length %></div>
        <div class="subscription"><strong>Subscription:</strong> <%= user.subscription %></div>
        <div class="trialPeriod"><strong>Trial Period:</strong> <%= user.trialEnd %></div>
        <div class="invoice"><strong>Invoice:</strong> <%= user.invoice %></div>
        <div class="referenceNo"><strong>Reference No:</strong> <%= user.referenceNo %></div>
      </div>
    </div>
    <% } %>
  </div>
</body>

</html>
